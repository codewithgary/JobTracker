<html>

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/css/contacts.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/321717bd5c.js" crossorigin="anonymous"></script>
    <title>Contacts</title>
</head>

<body>
    <!--navigation bar-->

    {{>header}}

    
    <!--Input form to add contacts-->
    <div class="container">
            <form class="form-signin" action="/contacts" method="POST">
			<h1 class="h3 mb-3 font-weight-normal">Add New Contact</h1>

			<label for="fname" class="sr-only">First Name</label>
			<input type="textbox" name="fname" id="fname" class="form-control" placeholder="First Name" required="" autofocus="">

			<label for="lname" class="sr-only">Last Name</label>
			<input type="textbox" name="lname" id="lname" class="form-control" placeholder="Last Name" required="">

			<label for="info" class="sr-only">Info</label>
			<input type="textbox" name="info" id="info" class="form-control" placeholder="Info" required="">

			<label for="email" class="sr-only">Email</label>
			<input type="textbox" name="email" id="email" class="form-control" placeholder="Email" required="">

			<label for="phoneNumber" class="sr-only">Phone Number</label>
			<input type="textbox" name="phoneNumber" id="phoneNumber" class="form-control" placeholder="phoneNumber" required="">
			
			<button class="btn btn-lg btn-primary btn-block" type="submit">Post</button>
		</form>	

        <br>

        <h3>Contact List</h3>
        <button class="btn btn-primary"><a href="/contactlist">View Contacts</a></button>
        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Info</th>
                    <th><i class="fas fa-envelope-square"></i></th>
                    <th><i class="fas fa-phone-square-alt"></i></th>
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                <tr>
                    <td>{{this.fname}}</td>
                    <td>{{this.lname}}</td>
                    <td>{{this.info}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td><button class="deleteBtn"><a href="/deletecontact/{{this.contactID}}"><i class="fas fa-trash"></i></a></button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>